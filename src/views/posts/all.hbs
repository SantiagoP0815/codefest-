<div class="container p-4">
    <div class="row">
        {{#each posts}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="/posts/show/{{id_post}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{p_title}}
                        </h3>
                    </a>
                    <p class="text-muted">
                        Created by: {{fullname}}
                    </p>
                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>