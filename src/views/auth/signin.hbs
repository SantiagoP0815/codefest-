<!DOCTYPE html>
<html>
<head>
  <title>Sign In</title>
  <script src="https://hcaptcha.com/1/api.js" async defer></script>
  <script src="validate-captcha.js"></script>
</head>
<body>

<div class="container p-4">
    <div class="row">
      <div class="col-md-4 mx-auto">
        <div class="card text-center">
          <div class="card-header">
            <h3>Sign In</h3>
          </div>
          <div class="card-body">
            <form action="/signin" method="POST" onsubmit="submitForm(event)">
              <div class="form-group">
                <input type="email" name="email" placeholder="Email" class="form-control" autofocus>
              </div>
              <div class="form-group">
                <input type="password" name="password" placeholder="Password" class="form-control">
              </div>
              <div class="h-captcha" data-sitekey="fc009908-bc61-476f-9d20-596962e43c33" id="captcha"></div>
              <button class="btn btn-success btn-block">
                Sign in
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
